/* Font */
@import url('https://fonts.googleapis.com/css?family=PT+Serif&display=swap');

body
  font-family 'PT Serif', serif
  font-size 1.1rem

/* Headers */
h3
  margin-top 2rem !important
  padding 0.4rem !important
  background-color $brand-color !important

h4, h5
  font-size 1.3rem

.theme-default-content:not(.custom) ul
  list-style-type 'â–¸'

/* Sidebar */

a.sidebar-link.active
  font-style italic
  outline none

.arrow.right
  display none

.arrow.down
  display none

/* Blocks */
mark
  background-color $table-header-background-color !important
  color $table-header-font-color !important
  padding-top 5px
  padding-left 17px
  padding-right 17px
  padding-bottom 22px

.micro
  font-size 1rem

hr
  border-color $textColor !important

/* Containers */

.tip
  border-color $brand-color - 20% !important
  background-color $brand-color !important

.warning
  color $warning-color - 80% !important
  background-color $warning-color !important
  border-color $warning-color - 20% !important

.warning .custom-block-title
  color $warning-color - 80% !important

.custom-block.warning a
  color $warning-color - 50% !important

/* Tables */
th
  color $table-header-font-color
  border-color $table-header-background-color !important
  background-color $table-header-background-color !important

tr:nth-child(even)
  background-color $brand-color !important

td
  border-color $table-header-font-color !important
  padding .4em

/* Homepage */
#main-title
  display none !important

.action-button
  background-color $brand-color - 20% !important
  border-color $brand-color - 20% !important
  width 30%
