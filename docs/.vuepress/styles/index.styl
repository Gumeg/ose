/* Font */

@import url('https://fonts.googleapis.com/css?family=PT+Serif&display=swap');

/* Body */

body
  font-family 'PT Serif', serif
  font-size 1.1rem !important

/* Headers */

h1
  font-size 3rem !important
  font-variant small-caps !important

h2
  font-size 2.4rem !important
  font-variant small-caps !important

h3
  font-size 1.7rem !important
  background-color $brand-color !important
  background-clip content-box !important

h4, h5
  font-size 1.3rem !important

.theme-default-content:not(.custom) ul
  list-style-type 'â–¸' !important

/* Sidebar */

a.sidebar-link.active
  font-style italic !important
  outline none !important

.arrow.right
  display none !important

.arrow.down
  display none !important
 
/* Containers */

.tip
  border-color $brand-color - 20% !important
  background-color $brand-color !important

.warning
  color $warning-color - 80% !important
  background-color $warning-color !important
  border-color $warning-color - 20% !important

.warning .custom-block-title
  color $warning-color - 80% !important

.custom-block.warning a
  color $warning-color - 50% !important

/* Tables */

th
  color $table-header-font-color !important
  background-color $table-header-background-color !important  
  border-color $table-border-color !important
  border-bottom-color $textColor !important
  border-bottom-width 3px

tr:nth-child(odd)
  background-color $brand-color + 30% !important

tr:nth-child(even)
  background-color $table-border-color !important

td
  border-color $table-border-color !important
  padding .4em  

/* Homepage */

#main-title
  display none !important

.action-button
  background-color $brand-color - 20% !important
  border-color $brand-color - 20% !important

/* Other */

mark
  background-color $table-header-background-color !important
  color $table-header-font-color !important
  padding 5px !important

.micro
  font-size 1rem !important

hr
  border-color $textColor !important